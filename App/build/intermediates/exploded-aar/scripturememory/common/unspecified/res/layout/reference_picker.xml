<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="32dp"
	android:background="@drawable/bg_oval_32" >
	<AutoCompleteTextView
		android:id="@+id/edit_reference"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:singleLine="true"
		android:hint="Reference"
		android:layout_marginRight="8dp"
		android:layout_marginLeft="16dp"
		android:layout_toLeftOf="@+id/clear_button"
		android:background="@null"/>

	<ImageView
		android:id="@+id/clear_button"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_alignParentRight="true"
		android:layout_marginRight="8dp"
		android:layout_marginLeft="-4dp"
		android:visibility="gone"
		android:src="?attr/ic_action_clear"/>

</RelativeLayout><!-- From: file:/C:/Users/Casey/Documents/android/scripturememory/common/src/main/res/layout/reference_picker.xml -->