<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_votd_layout"
    android:background="@drawable/bg_widget_dark"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/widget_votd_title"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif-light"
        android:text="@string/verse_of_the_day"
        android:textSize="@dimen/title_text_size" />

    <LinearLayout
        android:id="@+id/widget_votd_header_bar"
        android:layout_below="@id/widget_votd_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:background="@android:color/white"/>

    <TextView
        android:id="@+id/widget_votd_reference"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/widget_votd_header_bar"
        android:fontFamily="sans-serif-light"
        android:textStyle="italic"
        android:text="@string/reference" />

    <TextView
        android:id="@+id/widget_votd_verse"
        android:background="@android:color/transparent"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        android:paddingRight="8dp"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/widget_votd_reference"
        android:text="@string/verse" />
</RelativeLayout>
