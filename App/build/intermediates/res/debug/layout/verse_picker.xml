<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<AutoCompleteTextView
		android:id="@+id/edit_reference"
		android:layout_width="match_parent"
		android:layout_height="32dp"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="16dp"
		android:layout_marginBottom="16dp"
		android:paddingLeft="16dp"
		android:paddingRight="16dp"
		android:background="@drawable/bg_oval_32"
		android:singleLine="true"
		android:hint="Reference"/>
	<EditText
		android:id="@+id/edit_verse"
		android:layout_below="@+id/edit_reference"
		android:layout_above="@+id/button_panel"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="128dp"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginBottom="16dp"
		android:paddingLeft="16dp"
		android:paddingRight="16dp"
		android:hint="Verse text"
		android:background="@null"/>
	<LinearLayout
		android:id="@+id/button_panel"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_alignParentBottom="true"
		android:gravity="center_horizontal">
		<ImageView
			android:id="@+id/check_reference_button"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"
			android:src="?attr/ic_action_spellcheck"/>
		<ImageView
			android:id="@+id/lookup_text_button"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"
			android:src="?attr/ic_action_search"/>
		<ImageView
			android:id="@+id/save_verse_button"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"
			android:src="?attr/ic_action_save"/>
		<ImageView
			android:id="@+id/show_versions_button"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"
			android:src="?attr/ic_action_subject"/>
	</LinearLayout>
</RelativeLayout><!-- From: file:/C:/Users/Casey/Documents/android/scripturememory/common/src/main/res/layout/verse_picker.xml --><!-- From: file:/C:/Users/Casey/Documents/android/scripturememory/App/build/intermediates/exploded-aar/scripturememory/common/unspecified/res/layout/verse_picker.xml -->