<android.support.v7.widget.CardView
	xmlns:cardView="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	cardView:cardBackgroundColor="?attr/color_card"
	android:layout_marginTop="8dp"
	cardView:cardCornerRadius="4dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<!-- The header bar -->
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp" >
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_centerVertical="true"
				android:fontFamily="sans-serif-light"
				android:text="Pick the Reference"
				android:textSize="@dimen/title_text_size" />

			<ImageButton
				android:id="@+id/overflowButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/bg_transparent"
				android:layout_alignParentRight="true"
				android:layout_alignParentEnd="true"
				android:layout_centerVertical="true"
				android:src="?attr/ic_action_clear" />
		</RelativeLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:background="@android:color/darker_gray" />

		<!-- The verse text area -->
		<RelativeLayout
			android:id="@+id/notificationVerseLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="8dp">

			<TextView
				android:id="@+id/description"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_alignParentTop="true"
				android:layout_marginBottom="16dp"
				android:fontFamily="sans-serif-light"
				android:text="What's the reference for the following verse?"/>

			<TextView
				android:id="@+id/verseText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/description"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_marginLeft="16dp"
				android:layout_marginRight="16dp"
				android:fontFamily="sans-serif-light"
				android:text="For God so loved the world that he gave his one and only son tha whoever believes in him might not perish but have everlasting life"/>

			<TextView
				android:id="@+id/ref1"
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:gravity="center"
				android:layout_below="@id/verseText"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_marginTop="4dp"
				android:fontFamily="sans-serif-light"
				android:text="Epheisians 1:17"
				android:textSize="22sp"/>

			<TextView
				android:id="@+id/ref2"
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:gravity="center"
				android:layout_below="@id/ref1"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_marginTop="4dp"
				android:fontFamily="sans-serif-light"
				android:text="Galatians 2:19-21"
				android:textSize="22sp"/>

			<TextView
				android:id="@+id/ref3"
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:gravity="center"
				android:layout_below="@id/ref2"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_marginTop="4dp"
				android:fontFamily="sans-serif-light"
				android:text="John 3:16"
				android:textSize="22sp"/>

			<TextView
				android:id="@+id/ref4"
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:gravity="center"
				android:layout_below="@id/ref3"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_marginTop="4dp"
				android:fontFamily="sans-serif-light"
				android:text="Romans 12:12"
				android:textSize="22sp"/>

		</RelativeLayout>
	</LinearLayout>
</android.support.v7.widget.CardView><!-- From: file:/C:/Users/Casey/Documents/android/scripturememory/App/src/main/res/layout/card_references.xml -->