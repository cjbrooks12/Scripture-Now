<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory
        android:title="Preferences">
        <ListPreference
	        android:key="PREF_SELECTED_THEME"
	        android:title="App Theme"
	        android:summary="?attr/theme_name"
	        android:dialogTitle="App Theme"
	        android:entries="@array/pref_themes"
	        android:entryValues="@array/pref_themes_values"
	        android:defaultValue="0" />
        <ListPreference
            android:key="PREF_SELECTED_VERSION"
            android:title="Bible Version"
            android:dialogTitle="App Theme" />
	    <ListPreference
	        android:key="PREF_DEFAULT_SCREEN"
	        android:title="Default Screen"
	        android:dialogTitle="Default Screen"
	        android:entries="@array/pref_default_screen"
	        android:entryValues="@array/pref_default_screen_values"
	        android:defaultValue="0" />
        <ListPreference
            android:key="PREF_DEFAULT_SCREEN_LIST"
            android:title="List"
            android:dialogTitle="List" />
        <PreferenceScreen
            android:title="Verse of the Day" >
            <CheckBoxPreference
                android:key="PREF_VOTD_NOTIFICATION"
                android:title="Notify Verse of the Day"
                android:summary="Issue a daily notification for the Verse of the Day"
                android:defaultValue="false" />
            <com.caseybrooks.scripturememory.data.TimePreference
                android:key="PREF_VOTD_TIME"
                android:title="Notification Time"
                android:dependency="PREF_VOTD_NOTIFICATION" />
            <RingtonePreference
                android:key="PREF_VOTD_SOUND"
                android:dependency="PREF_VOTD_NOTIFICATION"
                android:title="Notification Sound"
                android:ringtoneType="notification"
                android:defaultValue="content://settings/system/notification_sound" />
        </PreferenceScreen>
    </PreferenceCategory>
    
    <PreferenceCategory
        android:title="Backup and Restore">
	    <Preference 
	        android:title="Backup" 
	        android:key="Backup" />
	    <Preference 
	        android:title="Restore" 
	        android:key="Restore" />
        <Preference
            android:title="Import"
            android:key="Import" />
    </PreferenceCategory>
</PreferenceScreen>