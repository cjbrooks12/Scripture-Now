<android.support.v7.widget.CardView
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardView:cardBackgroundColor="?attr/color_card"
    android:layout_marginTop="8dp"
	android:padding="8dp"
	cardView:cardUseCompatPadding="true"
    cardView:cardCornerRadius="4dp"
	cardView:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- The header bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal" >
            <TextView
				android:id="@+id/card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-light"
                android:text="Input Verse"
                android:textSize="@dimen/title_text_size" />

			<ProgressBar
				android:id="@+id/progress"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_toRightOf="@+id/card_title"
				android:layout_toEndOf="@+id/card_title"
				android:visibility="invisible"
				android:layout_marginLeft="8dp"
				android:layout_marginRight="8dp"
				style="?android:attr/progressBarStyleSmall"
				android:indeterminate="true"/>

            <ImageButton
                android:id="@+id/overflowButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_transparent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="?attr/ic_action_clear" />
        </RelativeLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/input_layout_textfields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textReference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif-light"
                android:text="@string/reference" />

            <EditText
                android:id="@+id/editReference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_reference"
                android:layout_below="@id/textReference"
                android:inputType="text|textNoSuggestions"
                android:imeOptions="actionSearch"
                android:fontFamily="sans-serif-light"
                android:ems="10"
                android:layout_toLeftOf="@+id/searchButton"/>

            <ImageButton
                android:id="@+id/searchButton"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_transparent"
                android:src="?attr/ic_action_search"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/editReference"/>

            <TextView
                android:id="@+id/textVerse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editReference"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif-light"
                android:text="@string/verse" />

            <EditText
                android:id="@+id/editVerse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_verse"
                android:layout_below="@id/textVerse"
                android:fontFamily="sans-serif-light"
				android:inputType="textMultiLine|textNoSuggestions"
				android:ems="10" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/addVerse"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="@string/add_verse"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/button_text_size"
            android:fontFamily="sans-serif-light" />
    </LinearLayout>
</android.support.v7.widget.CardView>