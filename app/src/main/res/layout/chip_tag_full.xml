<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/full_chip"
    android:layout_width="wrap_content"
    android:layout_height="32dp"
    android:background="@drawable/bg_chip" >
    <ImageView
        android:id="@+id/chip_tag_circle"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle"/>
    <ImageView
        android:id="@+id/chip_tag_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignLeft="@id/chip_tag_circle"
        android:layout_alignStart="@id/chip_tag_circle"
        android:layout_alignRight="@id/chip_tag_circle"
        android:layout_alignEnd="@id/chip_tag_circle"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/chip_tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/chip_tag_circle"
        android:layout_toEndOf="@+id/chip_tag_circle"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textSize="14sp"/>
</RelativeLayout>