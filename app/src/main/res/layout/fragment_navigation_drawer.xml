<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/color_background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorAccent" >
            <RelativeLayout
                android:id="@+id/ref_icon_layout"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="16dp" >
                <ImageView
                    android:id="@+id/mainIconBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle"/>
                <ImageView
                    android:id="@+id/mainIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="4dp"
                    android:src="@drawable/ic_launcher"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/navMainVerseRef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ref_icon_layout"
                android:layout_alignBottom="@+id/ref_icon_layout"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/ref_icon_layout"
                android:layout_toEndOf="@+id/ref_icon_layout"
                android:fontFamily="sans-serif-light"
                android:textSize="@dimen/title_text_size"
                android:text="@string/first_john_ref_test"/>

            <TextView
                android:id="@+id/navMainVerseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ref_icon_layout"
                android:fontFamily="sans-serif-light"
                android:text="@string/first_john_ver_test"/>
        </RelativeLayout>
    </ScrollView>

    <ExpandableListView
        android:id="@+id/navListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />
</LinearLayout>