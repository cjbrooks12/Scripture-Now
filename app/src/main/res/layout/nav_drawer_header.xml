<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/forest_green_light" >
    <RelativeLayout
        android:id="@+id/ref_icon_layout"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp" >
        <ImageView
            android:id="@+id/mainIconBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/circle"/>
        <ImageView
            android:id="@+id/mainIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="4dp"
            android:src="@drawable/ic_launcher"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/navHeaderRef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ref_icon_layout"
        android:layout_alignBottom="@+id/ref_icon_layout"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/ref_icon_layout"
        android:layout_toEndOf="@+id/ref_icon_layout"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/title_text_size"
        android:text="@string/first_john_ref_test"/>

    <View
        android:id="@+id/anchor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ref_icon_layout"
        android:background="#45000000"/>

    <TextView
        android:id="@+id/navHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/anchor"
        android:fontFamily="sans-serif-light"
        android:text="@string/first_john_ver_test"/>
</RelativeLayout>
