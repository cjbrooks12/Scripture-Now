<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="32dp"
    android:paddingStart="32dp"
    android:orientation="horizontal"
    android:background="?attr/color_background">
    
    <RelativeLayout
        android:layout_width="32dp"
        android:layout_height="32dp">
        <ImageView
            android:id="@+id/subitemCircle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle"/>
        <TextView
            android:id="@+id/subitemCircleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/subitemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="16dp"
        android:textSize="18sp" />

</LinearLayout><!-- From: file:/C:/Users/Casey/Desktop/github/scripturememory/App/src/main/res/layout/nav_list_subitem.xml -->