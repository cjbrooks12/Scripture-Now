<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/bg_card">
            <TextView
                android:id="@+id/a_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Verse A"/>
            <ImageButton
                android:id="@+id/a_next"
                android:src="?attr/ic_action_next_item"
                android:background="?attr/bg_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/a_tv"/>
            <ImageButton
                android:id="@+id/a_previous"
                android:src="?attr/ic_action_previous"
                android:background="?attr/bg_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/a_next"
                android:layout_below="@id/a_tv"/>
            <EditText
                android:id="@+id/a_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/a_previous"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/a_tv"/>
            <TextView
                android:id="@+id/b_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/a_et"
                android:text="Verse B"/>
            <ImageButton
                android:id="@+id/b_next"
                android:src="?attr/ic_action_next_item"
                android:background="?attr/bg_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/b_tv"/>
            <ImageButton
                android:id="@+id/b_previous"
                android:src="?attr/ic_action_previous"
                android:background="?attr/bg_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/a_next"
                android:layout_below="@id/b_tv"/>
            <EditText
                android:id="@+id/b_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/a_previous"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/b_tv"/>
            <TextView
                android:id="@+id/comparison_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/b_et"
                android:text="Result"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/bg_card">
            <TextView
                android:id="@+id/p_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Passage"/>
            <ImageButton
                android:id="@+id/p_add"
                android:src="?attr/ic_action_new"
                android:background="?attr/bg_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/p_tv"/>
            <EditText
                android:id="@+id/p_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/p_add"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/p_tv"/>
            <TextView
                android:id="@+id/passage_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/p_et"
                android:text="Result"/>
            <LinearLayout
                android:id="@+id/p_layout"
                android:layout_below="@id/passage_result"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="?attr/bg_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_results_layout">
            <ImageButton
                android:id="@+id/s_search"
                android:src="?attr/ic_action_search"
                android:background="?attr/bg_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/s_search"
                android:id="@+id/verse_spinner"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/verse_spinner"
                android:id="@+id/chapter_spinner"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toStartOf="@id/chapter_spinner"
                android:id="@+id/book_spinner"/>
            <TextView
                android:id="@+id/search_result_reference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/book_spinner"
                android:text="Result"/>
            <TextView
                android:id="@+id/search_result_verse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_result_reference"
                android:text=""/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/bg_card">
            <TextView
                android:id="@+id/m_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Matcher"/>
            <EditText
                android:id="@+id/m_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/m_tv"/>
            <TextView
                android:id="@+id/matcher_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/m_et"
                android:text="Result"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
