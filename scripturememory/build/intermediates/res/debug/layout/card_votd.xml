<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/bg_card" >

    <RelativeLayout
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <TextView
	        android:paddingLeft="@dimen/activity_horizontal_margin"
	        android:paddingRight="@dimen/activity_horizontal_margin"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:textSize="@dimen/title_text_size"
	        android:fontFamily="sans-serif-light"
            android:id="@+id/votd_title"
	        android:text="@string/verse_of_the_day" />

	    <ImageButton
	        android:id="@+id/contextMenu"
	        android:background="?attr/bg_transparent"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:src="?attr/ic_action_cancel"
	        android:contentDescription="@string/remove" />
    </RelativeLayout>
        
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
		android:paddingBottom="4dp"
	    android:orientation="vertical"
	    android:id="@+id/votdLayout" >
    
	    <View 
	        android:background="@android:color/darker_gray"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:id="@+id/hline" />
	    
	    <TextView
	        android:id="@+id/votdReference"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="@dimen/card_vertical_margin"
	        android:paddingBottom="@dimen/card_vertical_margin"
	        android:paddingLeft="@dimen/activity_horizontal_margin"
	        android:paddingRight="@dimen/activity_horizontal_margin"
	        android:textSize="@dimen/title_text_size"
	        android:fontFamily="sans-serif-light" />
	    	
	    <TextView
	        android:id="@+id/votdVerse"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:paddingLeft="@dimen/activity_horizontal_margin"
	        android:paddingRight="@dimen/activity_horizontal_margin"
	        android:fontFamily="sans-serif-light"
	        android:text="" />
    </LinearLayout>
</LinearLayout>

    
    
    
    
    
    
    
    
