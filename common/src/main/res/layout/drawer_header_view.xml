<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:minHeight="@dimen/nav_header_height"
    android:background="@color/forest_green_light"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/ref_icon_layout"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <ImageView
            android:id="@+id/mainIconBackground"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle"/>

        <ImageView
            android:id="@+id/mainIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/navHeaderRef"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/nav_header_height"
        android:layout_gravity="center_vertical|left"
        android:textColor="@color/text_color_primary_light"
        android:fontFamily="sans-serif-light"
        android:textSize="22dp"
        android:text="@string/app_name"/>

</LinearLayout>
