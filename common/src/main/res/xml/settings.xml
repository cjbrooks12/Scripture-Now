<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="Notifications">
        <PreferenceScreen
            android:title="Verse of the Day">
            <CheckBoxPreference
                android:key="votd_enabled"
                android:title="Show VOTD Notifications"
                android:summary="Show a daily notification for the Verse of the Day"/>
            <com.caseybrooks.common.pickers.TimePickerPreference
                android:key="votd_time"
                android:title="Set Time"
                android:summary="Show VOTD at {0}:{1}{2} every day"
                android:dependency="votd_enabled"/>
            <com.caseybrooks.common.pickers.RingtonePreference
            android:key="votd_sound"
                android:dependency="votd_enabled"
                android:title="Notification Sound"
                android:ringtoneType="notification"
                android:defaultValue="content://settings/system/notification_sound"/>
        </PreferenceScreen>

        <PreferenceScreen
            android:title="Joshua Project">
            <CheckBoxPreference
                android:key="jp_enabled"
                android:title="Show Notifications"
                android:summary="Show a daily notification to pray for the Unreached People Group of the Day"/>
            <com.caseybrooks.common.pickers.TimePickerPreference
                android:key="jp_time"
                android:title="Set Time"
                android:summary="Show Joshua Project at {0}:{1}{2} every day"
                android:dependency="jp_enabled"/>
            <com.caseybrooks.common.pickers.RingtonePreference
                android:key="jp_sound"
                android:dependency="jp_enabled"
                android:title="Notification Sound"
                android:ringtoneType="notification"
                android:defaultValue="content://settings/system/notification_sound"/>
        </PreferenceScreen>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Preferences">

        <ListPreference
            android:key="APP_THEME"
            android:title="Theme"
            android:entries="@array/themes"
            android:entryValues="@array/themes"/>

        <ListPreference
            android:key="DEFAULT_FEATURE"
            android:title="Default Screen"/>
        <ListPreference
            android:key="DEFAULT_FEATURE_ID"
            android:title="Default Screen Item"
            android:enabled="false"/>

    </PreferenceCategory>

</PreferenceScreen>